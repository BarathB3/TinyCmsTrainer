@model List<TinyCmsTrainer.Models.Post>

<section class="container my-5">
    <h1 class="mb-4">Blogbejegyzések</h1>

    @foreach (var post in Model)
    {
        <div class="mb-5">
            <h3>
                <a asp-controller="Posts" asp-action="Details" asp-route-slug="@post.Slug">
                    @post.Title
                </a>
            </h3>
            <p class="text-muted">@post.PublishedAt?.ToString("yyyy.MM.dd")</p>
            <p>@post.Excerpt</p>
            <a class="btn btn-outline-primary btn-sm" asp-controller="Posts" asp-action="Details" asp-route-slug="@post.Slug">
                Tovább →
            </a>
        </div>
    }
</section>
