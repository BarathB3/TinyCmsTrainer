@{
    ViewData["Title"] = "Blog – Edzés tippek és életmód útmutatók";
}

<section class="container my-5">
    <h1 class="fw-bold text-center mb-4">Edzés tippek & Életmód inspiráció</h1>
    <p class="text-center text-secondary mb-5">
        Olvass motiváló történeteket, edzésterveket és táplálkozási tanácsokat a fejlődésedhez!
    </p>

    <div class="row g-4">

        <!-- Blog Card 1 -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="/images/blog1.jpg" class="card-img-top" alt="Edzés kezdőknek">
                <div class="card-body">
                    <h5 class="card-title fw-bold">5 tipp kezdőknek a konditeremben</h5>
                    <p class="card-text">Előzd meg a tipikus hibákat és hozz ki többet minden edzésből!</p>
                    <a class="btn btn-primary w-100" href="#">Elolvasom →</a>
                </div>
            </div>
        </div>

        <!-- Blog Card 2 -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="/images/blog2.jpg" class="card-img-top" alt="Táplálkozás">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Mit egyek edzés után?</h5>
                    <p class="card-text">Maximáld az izomnövekedést és a regenerációt a megfelelő ételekkel!</p>
                    <a class="btn btn-primary w-100" href="#">Elolvasom →</a>
                </div>
            </div>
        </div>

        <!-- Blog Card 3 -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <img src="/images/blog3.jpg" class="card-img-top" alt="Motiváció">
                <div class="card-body">
                    <h5 class="card-title fw-bold">Hogyan maradj motivált hosszú távon?</h5>
                    <p class="card-text">Tippek, amelyek segítenek, hogy ne add fel félúton.</p>
                    <a class="btn btn-primary w-100" href="#">Elolvasom →</a>
                </div>
            </div>
        </div>

    </div>
</section>
