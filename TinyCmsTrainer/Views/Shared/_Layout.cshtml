<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TinyCmsTrainer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TinyCmsTrainer.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">Edző</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto">

                        <li class="nav-item"><a class="nav-link" href="/">Kezdőlap</a></li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Pages" asp-action="Rolam">Rólam</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Pages" asp-action="Szolgaltatasok">Szolgáltatások</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Posts" asp-action="Index">Blog</a>

                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Pages" asp-action="Kapcsolat">Kapcsolat</a>
                        </li>


                    </ul>

                    <button id="themeToggle" class="btn btn-outline-light ms-3">🌙 Téma váltás</button>

                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - TinyCmsTrainer - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
